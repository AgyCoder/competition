<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.competition.competitionsys.dao.ItemDao">
    <select id="findAllItems" resultType="com.competition.competitionsys.domain.ItemModel">
        select * from item
    </select>

    <insert id="addItem" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.competition.competitionsys.domain.ItemModel">
            insert into item(itemName,categoryId,photo,description,signUpStartTime,signUpEndTime,startTime,endTime,sponsor)
            values (#{itemName},#{categoryId},#{photo},#{description},#{signUpStartTime},#{signUpEndTime},#{startTime},#{endTime},#{sponsor})
    </insert>

    <delete id="deleteItem" parameterType="Integer">
            delete from item where id=#{id}
    </delete>
</mapper>